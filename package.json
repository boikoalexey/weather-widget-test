{
  "name": "vue-weather-widget",
  "version": "1.0.0",
  "description": "Weather widget built with Vue.js, TypeScript, and SCSS",
  "main": "dist/weather-widget.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
    "lint:js:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix",
    "lint:css": "stylelint \"**/*.{css,scss,pcss,vue}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss,pcss,vue}\" --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "npm-run-all lint:js lint:css format",
    "lint:fix": "npm-run-all lint:js:fix lint:css:fix format:fix"
  },
  "author": "Alexey Boyko",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.6.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vue/compiler-sfc": "^3.5.25",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-vue": "^10.4.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.5",
    "mini-css-extract-plugin": "^2.9.4",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "stylelint": "^16.21.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.39.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-loader": "^17.4.2",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
